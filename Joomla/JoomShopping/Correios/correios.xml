<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system">
	<name>plg_system_correios</name>
	<author>Aran Dunkley</author>
	<creationDate>August 2015</creationDate>
	<copyright>Copyright (C) 2015 Aran Dunkley</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>aran@organicdesign.co.nz</authorEmail>
	<authorUrl>www.organicdesign.co.nz/aran</authorUrl>
	<version>1.1.0</version>
	<description>Joomshopping shipping extension that calculates Correios freight cost at checkout</description>
	<files>
		<filename plugin="correios">correios.php</filename>
		<filename>sm_correios.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="carta" type="spacer"
					default="carta"
					label="&lt;b&gt;Precos de Carta registrada&lt;/b&gt;:"
					description="Precos de Carta Registrada"
				/>
				<field name="carta100" type="text" default="6,15" description="Preço de 100 até 150 gramas" label="100g-150g" size="10" />
				<field name="carta150" type="text" default="6,70" description="Preço de 150 até 200 gramas" label="150g-200g" size="10" />
				<field name="carta200" type="text" default="7,25" description="Preço de 200 até 250 gramas" label="200g-250g" size="10" />
				<field name="carta250" type="text" default="7,80" description="Preço de 250 até 300 gramas" label="250g-300g" size="10" />
				<field name="carta300" type="text" default="8,30" description="Preço de 300 até 350 gramas" label="300g-350g" size="10" />
				<field name="carta350" type="text" default="8,85" description="Preço de 350 até 400 gramas" label="350g-300g" size="10" />
				<field name="carta400" type="text" default="9,40" description="Preço de 400 até 450 gramas" label="400g-450g" size="10" />
				<field name="carta450" type="text" default="9,95" description="Preço de 450 até 500 gramas" label="450g-500g" size="10" />
				<field name="cartam" type="spacer"
					default="carta"
					label="&lt;b&gt;Precos de Carta registrada (módico)&lt;/b&gt;:"
					description="Precos de Carta Registrada (módico)"
				/>
				<field name="cartam100" type="text" default="4,35" description="Preço de 100 até 150 gramas" label="100g-150g" size="10" />
				<field name="cartam150" type="text" default="4,90" description="Preço de 150 até 200 gramas" label="150g-200g" size="10" />
				<field name="cartam200" type="text" default="5,45" description="Preço de 200 até 250 gramas" label="200g-250g" size="10" />
				<field name="cartam250" type="text" default="6,00" description="Preço de 250 até 300 gramas" label="250g-300g" size="10" />
				<field name="cartam300" type="text" default="6,50" description="Preço de 300 até 350 gramas" label="300g-350g" size="10" />
				<field name="cartam350" type="text" default="7,05" description="Preço de 350 até 400 gramas" label="350g-300g" size="10" />
				<field name="cartam400" type="text" default="7,60" description="Preço de 400 até 450 gramas" label="400g-450g" size="10" />
				<field name="cartam450" type="text" default="8,15" description="Preço de 450 até 500 gramas" label="450g-500g" size="10" />
			</fieldset>
		</fields>
	</config>
</extension>
